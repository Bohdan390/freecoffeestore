{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "env": {
    "SHOPIFY_STORE_DOMAIN": "@shopify_store_domain",
    "SHOPIFY_ACCESS_TOKEN": "@shopify_access_token",
    "SHOPIFY_WEBHOOK_SECRET": "@shopify_webhook_secret",
    "SUPABASE_URL": "@supabase_url",
    "SUPABASE_SERVICE_KEY": "@supabase_service_key"
  }
}

